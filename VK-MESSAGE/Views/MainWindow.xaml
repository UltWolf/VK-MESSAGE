<Window x:Class="VK_MESSAGE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK_MESSAGE"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200.885">
    <Grid  >

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Login" HorizontalAlignment="Center"></TextBlock>
        <TextBox Width="200"  Height="40" Grid.Row="0" Name="Email" ></TextBox>
        <TextBlock Text="Password" HorizontalAlignment="Center" Grid.Row="1"></TextBlock>
        <TextBox Width="200" Height="40" Grid.Row="1" Name="Password" VerticalAlignment="Center"></TextBox>
        <CheckBox Width="30" Height="19" Name="UseProxy" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        <TextBlock Text="Use Proxy" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="95,0,46.4,4" ></TextBlock>
        <Button Width="100" Height="30" Grid.Row="2" VerticalAlignment="Center" Content="Login" Click="Button_Click"></Button>
    </Grid>
</Window>
